<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/width_button_xlarge"
                android:layout_height="@dimen/width_button_xlarge"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_regular_xlarge"
                android:layout_marginBottom="@dimen/margin_regular_xlarge"
                android:contentDescription="Profile Picture"
                android:src="@drawable/anonymous"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heightTextView"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="No height details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ageTextView"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="No age details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/preferencesTextView"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="No preferences"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular_xlarge"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mapButton"
                    style="?android:attr/button"
                    android:layout_width="@dimen/width_button_small"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/margin_regular_xlarge"
                    android:text="Map" />

                <Button
                    android:id="@+id/statsButton"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats" />

                <Button
                    android:id="@+id/nextButton"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next" />

            </LinearLayout>

            <!-- New Button for Nearest Game -->
            <Button
                android:id="@+id/nearestGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Nearest Game"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
