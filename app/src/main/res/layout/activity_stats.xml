<!-- activity_stats.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatsActivity">

    <!-- Display statistics -->
    <TextView
        android:id="@+id/livePlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Players: " />

    <TextView
        android:id="@+id/basketballPlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basketball Players: " />

    <TextView
        android:id="@+id/soccerPlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soccer Players: " />

    <!-- Button to navigate to MapActivity -->
    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map" />

</LinearLayout>
