<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:layout_marginTop="@dimen/margin_regular_xlarge"
        android:id="@+id/splash_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_logo"
        android:scaleType="centerCrop"
        android:src="@drawable/fulllogo" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_weight="2"
        style="?android:attr/progressBarStyle"
        android:progressTint="#FFDE59"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:indeterminateTint="#FFDE59"
        />

    <TextView
        android:id="@+id/itamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorOnPrimary"
        android:text="@string/itamar_string" />

    <TextView
        android:id="@+id/itay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorOnPrimary"
        android:text="@string/itay_string" />

    <TextView
        android:id="@+id/iyar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/iyar_string"
        android:layout_marginBottom="@dimen/margin_regular_xlarge"
        android:textColor="@color/colorOnPrimary" />
</LinearLayout>