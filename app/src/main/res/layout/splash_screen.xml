<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryContainer">

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_above="@id/splash_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/splash_icon"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_centerInParent="true"
        android:contentDescription="App Logo"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="@color/colorPrimary" />



    <TextView
        android:id="@+id/itamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/splash_icon"
        android:text="@string/itamar_string"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/itamar"
        android:text="@string/itay_string"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iyar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/itay"
        android:text="@string/iyar_string"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />
</RelativeLayout>